{
  "manifest_version": 3,
  "name": "AuraSync IDE",
  "version": "1.0.0",

  "icons": {
    "16": "app/favicon-16.png",
    "32": "app/favicon-32.png",
    "48": "app/favicon-48.png",
    "128": "app/favicon-128.png"
  },

  "background": {
    "service_worker": "background.js"
  },

  "side_panel": {
    "default_path": "app/index.html"
  },

  "action": {
    "default_title": "AuraSync"
  },

  "permissions": [
    "storage",
    "sidePanel",
    "activeTab",
    "tabs",
    "tabCapture"
  ],

  "host_permissions": [
    "http://localhost:3000/*"
  ]
}
